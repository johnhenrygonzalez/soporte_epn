<!-- ================= ENCABEZADO UNIVERSAL ================= -->
<div class="encabezado-admin d-flex align-items-center justify-content-between">

  <div class="encabezado-logo">
    <% if (logo) { %>
      <img src="/uploads/<%= logo %>" class="logo-admin" />
    <% } %>
  </div>

  <div class="encabezado-titulos flex-grow-1 text-center">
    <h2 class="titulo-admin">
      <i class="fas fa-users me-2"></i> Usuarios del Sistema
    </h2>
    <p class="subtitulo-admin">
      <%= usuarioSesion.nombre %>
    </p>
  </div>

  <div class="encabezado-espaciador"></div>

</div>

<!-- ================= CONTENEDOR ================= -->
<div class="contenedor-tabla shadow-sm">

  <!-- ===== BARRA DE ACCIONES ===== -->
  <div class="d-flex justify-content-end align-items-center gap-2 mb-3">

    <a href="/admin/auditoria-usuarios" class="btn btn-dark btn-sm fw-bold">
      <i class="fas fa-user-shield me-1"></i> Auditor√≠a usuarios
    </a>

    <a href="/admin/usuarios/crear" class="btn btn-success btn-sm fw-bold">
      <i class="fas fa-user-plus me-1"></i> Crear Usuario
    </a>

  </div>

  <!-- ===== FILTRO POR ROL ===== -->
  <form method="GET" class="row g-3 mb-3 align-items-end">

    <div class="col-md-4">
      <label class="form-label fw-bold">Filtrar por rol:</label>
      <select name="rol" class="form-select">
        <option value="">Todos</option>
        <option value="Administrador" <%= filtroRol === "Administrador" ? "selected" : "" %>>
          Administradores
        </option>
        <option value="T√©cnico" <%= filtroRol === "T√©cnico" ? "selected" : "" %>>
          T√©cnicos
        </option>
      </select>
    </div>

    <div class="col-md-4 d-flex gap-2">
      <button class="btn btn-primary btn-filtrar">üîç Filtrar</button>
      <a href="/admin/usuarios" class="btn btn-secondary btn-filtrar">‚ü≥ Limpiar</a>
    </div>

  </form>

  <!-- ===== TOTALES ===== -->
  <div class="text-muted small mb-3">
    <strong>Administradores:</strong> <%= totalAdmins %> &nbsp; | &nbsp;
    <strong>T√©cnicos:</strong> <%= totalTecnicos %>
  </div>

  <!-- ===== TABLA ===== -->
  <div class="table-responsive">
    <table class="table table-striped align-middle">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Nombre</th>
          <th>Correo</th>
          <th>Rol</th>
          <th>Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% if (usuarios.length === 0) { %>
          <tr>
            <td colspan="5" class="text-center text-muted">
              No hay usuarios para mostrar
            </td>
          </tr>
        <% } %>

        <% usuarios.forEach(u => { %>
          <tr>
            <td><%= u.id %></td>
            <td><%= u.nombre %></td>
            <td><%= u.correo %></td>
            <td><%= u.rol %></td>
            <td>
              <a href="/admin/usuarios/editar/<%= u.id %>" class="btn btn-sm btn-warning">
                Editar
              </a>
              <a href="/admin/usuarios/eliminar/<%= u.id %>" 
                 class="btn btn-sm btn-danger"
                 onclick="return confirm('¬øEliminar este usuario?')">
                 Eliminar
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- ===== PAGINACI√ìN ===== -->
  <% const paginaActual = pagina || 1; %>

  <% if (totalPaginas > 1) { %>
    <nav class="mt-4">
      <ul class="pagination justify-content-center">

        <li class="page-item <%= paginaActual === 1 ? 'disabled' : '' %>">
          <a class="page-link"
             href="?pagina=<%= paginaActual - 1 %><%= filtroRol ? '&rol=' + filtroRol : '' %>">
            Anterior
          </a>
        </li>

        <% for (let i = 1; i <= totalPaginas; i++) { %>
          <li class="page-item <%= paginaActual === i ? 'active' : '' %>">
            <a class="page-link"
               href="?pagina=<%= i %><%= filtroRol ? '&rol=' + filtroRol : '' %>">
              <%= i %>
            </a>
          </li>
        <% } %>

        <li class="page-item <%= paginaActual === totalPaginas ? 'disabled' : '' %>">
          <a class="page-link"
             href="?pagina=<%= paginaActual + 1 %><%= filtroRol ? '&rol=' + filtroRol : '' %>">
            Siguiente
          </a>
        </li>

      </ul>
    </nav>
  <% } %>

  <div class="mt-3">
    <a href="/admin" (cambiar solo esto por ruta correcta)
      class="fw-bold text-decoration-none">
      ‚¨Ö Volver al Menu
    </a>
  </div>

</div>

