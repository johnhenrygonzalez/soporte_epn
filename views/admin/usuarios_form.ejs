<%
  if (typeof pageType === 'undefined') {
    var pageType = 'admin';
  }
%>

<section class="contenido-principal">

<!-- ======================= ENCABEZADO UNIVERSAL ======================= -->
<div class="encabezado-admin d-flex align-items-center justify-content-between">

  <!-- LOGO IZQUIERDA -->
  <div class="encabezado-logo">
    <% if (logo) { %>
      <img 
        src="/uploads/<%= logo %>" 
        alt="Logo institucional"
        class="logo-admin"
      >
    <% } %>
  </div>

  <!-- T√çTULO CENTRADO -->
  <div class="encabezado-titulos flex-grow-1 text-center">
    <h2 class="titulo-admin">
      <i class="fas fa-user-edit me-2"></i> <%= titulo %>
    </h2>

    <p class="subtitulo-admin">
      <%= (usuarioSesion && usuarioSesion.nombre) || 'Administrador' %>
    </p>

    <% if (typeof error !== 'undefined' && error) { %>
      <div style="margin-top: 8px; color:red; font-weight:bold;">
        <%= error %>
      </div>
    <% } %>
  </div>

  <!-- ESPACIADOR DERECHO -->
  <div class="encabezado-espaciador"></div>

</div>
<!-- ======================= FIN ENCABEZADO ======================= -->


<!-- ======================= FORMULARIO ======================= -->
<div class="form-container">
  <form 
    method="POST"
    action="<%= accion %>"
    class="form-usuario"
    id="formUsuario"
  >
    <!-- Nombre -->
    <label for="nombre">Nombre:</label>
    <input 
      type="text" 
      id="nombre" 
      name="nombre" 
      value="<%= usuario ? usuario.nombre : '' %>" 
      required
    >

    <!-- Correo -->
    <label for="correo">Correo:</label>
    <input 
      type="email" 
      id="correo" 
      name="correo" 
      value="<%= usuario ? usuario.correo : '' %>" 
      required
    >

    <!-- Rol -->
    <label for="rol">Rol:</label>
    <select id="rol" name="rol" required>
      <option value="">Seleccione un rol</option>
      <option value="Administrador" <%= usuario && usuario.rol === 'Administrador' ? 'selected' : '' %>>Administrador</option>
      <option value="T√©cnico" <%= usuario && usuario.rol === 'T√©cnico' ? 'selected' : '' %>>T√©cnico</option>
    </select>

    <!-- Contrase√±a (solo al crear usuario) -->
    <% if (!usuario) { %>
      <label for="contrasena">Contrase√±a:</label>
      <input 
        type="password" 
        id="contrasena" 
        name="contrasena" 
        minlength="8"
        required
      >
    <% } %>

    <!-- Botones -->
    <div class="botones-form">
      <button type="submit" class="btn-guardar">üíæ Guardar</button>
      <a href="/admin/usuarios" class="btn-cancelar">‚Üê Volver</a>
    </div>

  </form>
</div>

</section>


<!-- ============================== VALIDACI√ìN JS ============================== -->
<script>
document.getElementById('formUsuario').addEventListener('submit', function(e) {
  const nombre = document.getElementById('nombre').value.trim();
  const correo = document.getElementById('correo').value.trim();
  const rol = document.getElementById('rol').value;
  const contrasena = document.getElementById('contrasena');

  if (!nombre || !correo || !rol) {
    alert("Por favor, completa todos los campos obligatorios.");
    e.preventDefault();
    return false;
  }

  if (contrasena && contrasena.value.length < 8) {
    alert("La contrase√±a debe tener al menos 8 caracteres.");
    e.preventDefault();
    return false;
  }
});
</script>


