<!-- ===================== ENCABEZADO UNIVERSAL (MODELO EST√ÅNDAR) ===================== -->
<div class="encabezado-admin d-flex align-items-center justify-content-between">

  <!-- LOGO IZQUIERDA -->
  <div class="encabezado-logo">
    <% if (logo) { %>
      <img 
        src="/uploads/<%= logo %>" 
        alt="Logo institucional"
        class="logo-admin"
      >
    <% } %>
  </div>

  <!-- T√çTULO Y USUARIO -->
  <div class="encabezado-titulos flex-grow-1 text-center">
    <h2 class="titulo-admin">
      <i class="fas fa-users me-2"></i> Gesti√≥n de Usuarios
    </h2>
    <p class="subtitulo-admin">
      <%= (usuarioSesion && usuarioSesion.nombre) || 'Administrador' %>
    </p>
  </div>

  <!-- ESPACIADOR DERECHO -->
  <div class="encabezado-espaciador"></div>

</div>

<!-- BOT√ìN CREAR NUEVO USUARIO -->
<div class="contenedor-boton">
  <a href="/admin/usuarios/crear" class="btn-crear">‚ûï Crear nuevo usuario</a>
</div>

<!-- ===================== TABLA ===================== -->
<% if (usuarios.length > 0) { %>
  <table class="tabla-usuarios">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Correo</th>
        <th>Rol</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% usuarios.forEach(u => { %>
        <tr>
          <td><%= u.id %></td>
          <td><%= u.nombre %></td>
          <td><%= u.correo %></td>
          <td><%= u.rol %></td>
          <td class="acciones">
            <a href="/admin/usuarios/editar/<%= u.id %>" class="btn-editar">‚úèÔ∏è Editar</a>
            <a href="/admin/usuarios/eliminar/<%= u.id %>" class="btn-eliminar"
               onclick="return confirm('¬øDeseas eliminar este usuario?')">
               üóë Eliminar
            </a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else { %>
  <p class="mensaje-vacio">No hay usuarios registrados.</p>
<% } %>


