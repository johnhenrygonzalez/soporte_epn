<style>
/* Fondo oscuro elegante */
.modal-2fa-backdrop {
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.55);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 99999;
}

/* Tarjeta del modal */
.modal-2fa-container {
  background: #ffffff;
  width: 420px;
  padding: 30px;
  border-radius: 14px;
  box-shadow: 0 0 20px rgba(0,0,0,0.25);
  text-align: center;
}

/* Animaci√≥n de aparici√≥n */
.animate-pop {
  animation: pop 0.28s ease-out;
}

@keyframes pop {
  0% { transform: scale(0.6); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}

/* Logo */
.logo-2fa {
  width: 85px;
  height: 85px;
  object-fit: contain;
}

/* T√≠tulo */
.titulo-2fa {
  font-size: 22px;
  font-weight: bold;
  margin-bottom: 10px;
  color: #333;
}

/* Texto */
.texto-2fa {
  font-size: 15px;
  color: #555;
  margin-bottom: 15px;
}

/* QR */
.qr-box {
  background: #fafafa;
  padding: 15px;
  border-radius: 12px;
  border: 1px solid #ddd;
  margin-bottom: 18px;
}
.qr-img {
  width: 180px;
  height: 180px;
}

/* C√≥digo secreto */
.secret-box {
  font-size: 14px;
  padding: 12px;
  background: #f1f1f1;
  border-radius: 8px;
  margin-bottom: 20px;
}

/* Input */
.input-2fa {
  width: 100%;
  padding: 10px;
  font-size: 18px;
  text-align: center;
  border-radius: 10px;
  border: 1px solid #ccc;
  margin-bottom: 15px;
}
.label-2fa {
  font-size: 14px;
  text-align: left;
  font-weight: 600;
}

/* Bot√≥n */
.btn-2fa {
  width: 100%;
  padding: 12px;
  font-size: 16px;
  background: #1a57d8;
  color: white;
  border: none;
  border-radius: 8px;
  transition: 0.2s;
}
.btn-2fa:hover {
  background: #0f3fa2;
}

/* Efecto de carga */
.btn-2fa.loading {
  background: #0f3fa2;
  position: relative;
}
.btn-2fa.loading::after {
  content: "‚è≥ Activando...";
}
</style>

<script>
document.querySelector("#btnActivate").addEventListener("click", function() {
  this.classList.add("loading");
});
</script>
