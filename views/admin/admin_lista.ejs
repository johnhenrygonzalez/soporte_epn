<!-- Tarjeta administradores y tecnicos -->
<%
  if (typeof pageType === 'undefined') {
    pageType = 'interna';
  }
  if (typeof title === 'undefined') {
    title = "Soporte EPN - TÃ©cnicos";
  }
%>

<!-- ========== ENCABEZADO UNIVERSAL (IGUAL AL PANEL PRINCIPAL) ========== -->
<div class="encabezado-admin d-flex align-items-center justify-content-between">

  <!-- LOGO IZQUIERDA -->
  <div class="encabezado-logo">
    <% if (logo) { %>
      <img 
        src="/uploads/<%= logo %>" 
        alt="Logo institucional"
        class="logo-admin"
      >
    <% } %>
  </div>

  <!-- TÃTULO Y USUARIO -->
  <div class="encabezado-titulos flex-grow-1 text-center">
    <h2 class="titulo-admin">
      <i class="fas fa-users-cog me-2"></i> AdministraciÃ³n de Usuarios
    </h2>
    <p class="subtitulo-admin">
      <%= (usuarioSesion && usuarioSesion.nombre) || "Administrador" %>
    </p>
  </div>

  <!-- ESPACIADOR DERECHO -->
  <div class="encabezado-espaciador"></div>

</div>

<!-- ========== CONTENIDO ========== -->
<section class="contenido-interno">

  <% if (usuarios && usuarios.length > 0) { %>
    <table class="tabla-usuarios">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Correo</th>
          <th>Rol</th>
        </tr>
      </thead>
      <tbody>
        <% usuarios.forEach(usuario => { %>
          <tr>
            <td><%= usuario.id %></td>
            <td><%= usuario.nombre %></td>
            <td><%= usuario.correo %></td>
            <td><%= usuario.rol %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p class="mensaje-vacio">No hay usuarios registrados en esta categorÃ­a.</p>
  <% } %>

</section>

