<!-- ===================== JS: Habilitar / deshabilitar combo t√©cnico ===================== -->
<script>
  const selDestino = document.getElementById("filtro_destino");
  const selTecnico = document.getElementById("filtro_tecnico");

  function actualizarTecnico() {
    if (!selDestino) return;
    if (selDestino.value === "todos") {
      // Si es "todos", deshabilitamos selecci√≥n de t√©cnico
      selTecnico.value = "";
      selTecnico.disabled = true;
    } else {
      selTecnico.disabled = false;
    }
  }

  if (selDestino && selTecnico) {
    selDestino.addEventListener("change", actualizarTecnico);
    // Llamar una vez al cargar con el valor actual
    actualizarTecnico();
  }

  
  // Paleta de colores pastel suaves
  const coloresPastel = [
    "#A3D8F4", // azul pastel
    "#B5EAD7", // verde menta pastel
    "#FFDAC1", // durazno pastel
    "#F9E2AE", // amarillo pastel suave
    "#E2C2FF", // lavanda pastel
    "#FFB7B2", // coral suave
    "#C7CEEA", // celeste lavanda
  ];

  // Asignar color seg√∫n el ID del t√©cnico
  document.querySelectorAll(".badge-tecnico").forEach(badge => {
    const id = parseInt(badge.dataset.tecnicoId, 10);
    const color = coloresPastel[id % coloresPastel.length];
    badge.style.backgroundColor = color;
    badge.style.borderColor = color;
  });

</script>
