<!-- ===================== ENCABEZADO UNIVERSAL ===================== -->
<div class="encabezado-admin d-flex align-items-center justify-content-between">

  <div class="encabezado-logo">
    <% if (logo) { %>
      <img src="/uploads/<%= logo %>" class="logo-admin" alt="Logo institucional">
    <% } %>
  </div>

  <div class="encabezado-titulos flex-grow-1 text-center">
    <h2 class="titulo-admin">
      <i class="fas fa-history me-2"></i> Historial de Mensajes
    </h2>
    <p class="subtitulo-admin">
      <%= (usuarioSesion && usuarioSesion.nombre) || 'Administrador' %>
    </p>
  </div>

  <div class="encabezado-espaciador"></div>
</div>

  <!-- ========== FILTROS ========== -->
  <form method="GET" class="filtros mb-3">
    <div class="row g-3 align-items-end">

      <!-- Fecha desde -->
      <div class="col-md-3">
        <label class="form-label fw-bold">Fecha desde</label>
        <input
          type="date"
          name="fecha_desde"
          class="form-control"
          value="<%= filtros.fecha_desde || '' %>">
      </div>

      <!-- Fecha hasta -->
      <div class="col-md-3">
        <label class="form-label fw-bold">Fecha hasta</label>
        <input
          type="date"
          name="fecha_hasta"
          class="form-control"
          value="<%= filtros.fecha_hasta || '' %>">
      </div>

      <!-- Destino -->
      <div class="col-md-3">
        <label class="form-label fw-bold">Destino</label>
        <select name="destino" id="filtro_destino" class="form-select">
          <option value="">Todos</option>
          <option value="uno"   <%= filtros.destino === 'uno'   ? 'selected' : '' %>>Mensajes individuales</option>
          <option value="todos" <%= filtros.destino === 'todos' ? 'selected' : '' %>>Env√≠os a todos</option>
        </select>
      </div>

      <!-- T√©cnico -->
      <div class="col-md-3">
        <label class="form-label fw-bold">T√©cnico</label>
        <select name="tecnico_id" id="filtro_tecnico" class="form-select">
          <option value="">Todos</option>
          <% if (typeof tecnicos !== 'undefined') { %>
            <% tecnicos.forEach(t => { %>
              <option value="<%= t.id %>" <%= String(filtros.tecnico_id) === String(t.id) ? 'selected' : '' %>>
                <%= t.nombre %>
              </option>
            <% }) %>
          <% } %>
        </select>
      </div>

      <!-- Botones -->
      <div class="col-12 d-flex justify-content-end gap-2 mt-2">
        <button type="submit" class="btn btn-primary">üîç Filtrar</button>
        <a href="/admin/mensajes-historial" class="btn btn-outline-secondary">‚ü≥ Limpiar</a>
      </div>

    </div>
  </form>

  <!-- ===================== TABLA ===================== -->
  <div class="contenedor-tabla shadow-sm">

    <% if (mensajes.length === 0) { %>
      <p class="text-center text-muted mb-0">No hay mensajes registrados con los filtros seleccionados.</p>
    <% } else { %>

      <div class="table-responsive">
        <table class="table table-striped align-middle">
          <thead class="table-dark">
            <tr>
              <th class="text-center">Fecha de Envio</th>
              <th class="text-center">Enviado Por</th>
              <th class="text-center">Destinatario</th>
              <th class="text-center">Asunto</th>
              <th class="text-center">Mensaje</th>

            </tr>
          </thead>
          <tbody>
            <% mensajes.forEach(m => { %>
              <tr>
                <td class="text-center"><%= new Date(m.fecha).toLocaleString("es-CO") %></td>
                <td class="text-center"><%= m.admin_nombre %></td>

                <td class="text-center">
                  <% if (m.destinatario_tipo === "todos") { %>
                    <span class="badge-dest badge-todos">Todos</span>
                  <% } else { %>
                    <span 
                      class="badge-dest badge-tecnico" 
                      data-tecnico-id="<%= m.destinatario_id %>"
                    >
                      <%= m.tecnico_nombre %>
                    </span>
                  <% } %>
                </td>

                <td class="text-center"><%= m.asunto %></td>
                <td class="text-center">
                  <button 
                    class="btn btn-sm btn-dark verMensajeBtn"
                    data-mensaje="<%= m.mensaje %>"
                  >
                    Ver mensaje
                  </button>
                </td>

              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <!-- ========== PAGINACI√ìN ========== -->
      <% if (totalPaginas > 1) { %>
        <nav class="mt-3">
          <ul class="pagination justify-content-center">

            <!-- Anterior -->
            <li class="page-item <%= pagina <= 1 ? 'disabled' : '' %>">
              <a class="page-link"
                 href="<%= pagina > 1
                          ? '?pagina=' + (pagina - 1)
                            + '&fecha_desde=' + (filtros.fecha_desde || '')
                            + '&fecha_hasta=' + (filtros.fecha_hasta || '')
                            + '&destino=' + (filtros.destino || '')
                            + '&tecnico_id=' + (filtros.tecnico_id || '')
                          : '#' %>">
                ¬´
              </a>
            </li>

            <!-- N√∫meros -->
            <% for (let p = 1; p <= totalPaginas; p++) { %>
              <li class="page-item <%= p === pagina ? 'active' : '' %>">
                <a class="page-link"
                   href="?pagina=<%= p %>
                        &fecha_desde=<%= filtros.fecha_desde || '' %>
                        &fecha_hasta=<%= filtros.fecha_hasta || '' %>
                        &destino=<%= filtros.destino || '' %>
                        &tecnico_id=<%= filtros.tecnico_id || '' %>">
                  <%= p %>
                </a>
              </li>
            <% } %>

            <!-- Siguiente -->
            <li class="page-item <%= pagina >= totalPaginas ? 'disabled' : '' %>">
              <a class="page-link"
                 href="<%= pagina < totalPaginas
                          ? '?pagina=' + (pagina + 1)
                            + '&fecha_desde=' + (filtros.fecha_desde || '')
                            + '&fecha_hasta=' + (filtros.fecha_hasta || '')
                            + '&destino=' + (filtros.destino || '')
                            + '&tecnico_id=' + (filtros.tecnico_id || '')
                          : '#' %>">
                ¬ª
              </a>
            </li>

          </ul>
        </nav>
      <% } %>

    <% } %>

  </div>
</div>

<!-- MODAL ‚Äî Ver mensaje completo -->
<div class="modal fade" id="modalMensaje" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content p-3">
      <div class="modal-header">
        <h5 class="modal-title">Mensaje enviado</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body" id="modalMensajeTexto" style="white-space: pre-line;">
      </div>

      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {
  document.querySelectorAll(".verMensajeBtn").forEach(btn => {
    btn.addEventListener("click", () => {
      const texto = btn.dataset.mensaje || "";
      document.getElementById("modalMensajeTexto").innerText = texto;

      const modal = new bootstrap.Modal(document.getElementById("modalMensaje"));
      modal.show();
    });
  });
});
</script>

