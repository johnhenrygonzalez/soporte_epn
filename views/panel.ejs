<!-- ================= ANIMACI√ìN DE TARJETAS ================= -->
<script>
  document.querySelectorAll('.card').forEach(c => {
    c.addEventListener('click', () => {
      c.classList.add('clicked');
      setTimeout(() => c.classList.remove('clicked'), 150);
    });
  });
</script>


